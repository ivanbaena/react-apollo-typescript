{
  "name": "gram-stack",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "apollo-init": "mkdir -p dist/apollo; cd ./dist/apollo; touch index.js",
    "clean:apollo": "rimraf dist/apollo",
    "apollo:start-server": "nodemon --watch dist/apollo --exec \"node dist/apollo/index.js\"",
    "apollo:build-server": "webpack --config webpack.apollo.js --watch --progress",
    "apollo-setup": "npm run clean:apollo && npm run apollo-init",
    "apollo": "npm run apollo-setup && npm-run-all --parallel apollo:*"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "apollo-datasource-mongodb": "^0.2.7",
    "apollo-server-express": "^2.17.0",
    "body-parser": "^1.19.0",
    "cookie-session": "^1.4.0",
    "express": "^4.17.1",
    "graphql": "^14.7.0",
    "mongoose": "^5.10.2",
    "nodemon": "^2.0.4",
    "typescript": "^4.0.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.7",
    "@types/mongoose": "^5.7.36",
    "@types/node": "^14.6.2",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "ts-loader": "^8.0.3",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12"
  }
}
