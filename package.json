{
  "name": "gram-stack",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "apollo-init": "mkdir -p apollo/build; cd ./apollo/build; touch index.js",
    "clean:apollo": "rimraf apollo/build",
    "apollo:prebuild": "npm run clean:apollo && npm run apollo-init",
    "apollo:build-server": "webpack --config webpack.apollo.js --watch --progress",
    "apollo:start-server": "nodemon --watch apollo/build --exec \"node apollo/build/index.js\"",
    "apollo": "npm-run-all --parallel apollo:*"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "apollo-server": "^2.17.0",
    "graphql": "^15.3.0",
    "nodemon": "^2.0.4",
    "typescript": "^4.0.2"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "ts-loader": "^8.0.3",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12"
  }
}
